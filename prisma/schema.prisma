generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid(7))
  username     String   @unique
  password     String
  firstName    String?
  lastName     String?
  rootFolder   Folder?  @relation("UserRootFolder", fields: [rootFolderId], references: [id])
  rootFolderId String?  @unique
  folders      Folder[] @relation("UserFolders")
  File         File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model File {
  id         String   @id @default(uuid(7))
  type       String   @default("file")
  user       User     @relation(fields: [userId], references: [id])
  folder     Folder   @relation(fields: [folderId], references: [id])
  name       String
  size       Int
  mimeType   String
  storageUrl String
  uploadedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  folderId   String
  userId     String
}

model Folder {
  id           String   @id @default(uuid(7))
  type         String   @default("folder")
  name         String
  user         User     @relation("UserFolders", fields: [userId], references: [id])
  userId       String
  parentFolder Folder?  @relation("FolderToFolder", fields: [folderId], references: [id])
  childFolders Folder[] @relation("FolderToFolder")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  File         File[]
  folderId     String?
  rootOwner    User?    @relation("UserRootFolder")
}
