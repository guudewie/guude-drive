<!-- class="absolute z-10 w-44 invisible rounded divide-y shadow bg-gray-700 divide-gray-800"> -->
<ul class="py-1 text-sm text-white">
    <li>
        <button 
          data-modal-target="update-item" 
          data-modal-toggle="update-item" 
          data-item-id="<%= item.id %>"
          data-item-name="<%= item.name %>"
          data-item-type="<%= item.type %>"
          class="flex w-full items-center gap-2 py-2 px-4 hover:bg-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path d="m5.433 13.917 1.262-3.155A4 4 0 0 1 7.58 9.42l6.92-6.918a2.121 2.121 0 0 1 3 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 0 1-.65-.65Z" />
                <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0 0 10 3H4.75A2.75 2.75 0 0 0 2 5.75v9.5A2.75 2.75 0 0 0 4.75 18h9.5A2.75 2.75 0 0 0 17 15.25V10a.75.75 0 0 0-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5Z" />
            </svg>                    
            Edit
        </button>
    </li>
    <li>
        <% if (item.type == "folder") { %>
            <button disabled class="flex w-full items-center gap-2 py-2 px-4 enabled:hover:bg-gray-600 disabled:text-gray-400">
        <% } else { %>
            <form action="/download/<%= item.id %>" method="get">
                <button type="submit" onclick="setToast('Download Started!')" class="flex w-full items-center gap-2 py-2 px-4 enabled:hover:bg-gray-600 disabled:text-gray-400">
            </form>
        <% } %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path d="M10.75 2.75a.75.75 0 0 0-1.5 0v8.614L6.295 8.235a.75.75 0 1 0-1.09 1.03l4.25 4.5a.75.75 0 0 0 1.09 0l4.25-4.5a.75.75 0 0 0-1.09-1.03l-2.955 3.129V2.75Z" />
                <path d="M3.5 12.75a.75.75 0 0 0-1.5 0v2.5A2.75 2.75 0 0 0 4.75 18h10.5A2.75 2.75 0 0 0 18 15.25v-2.5a.75.75 0 0 0-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5Z" />
            </svg>                                    
            Download
        </button>
    </li>
</ul>
<div class="py-1 text-red-400">
    <button 
          data-modal-target="delete-item"
          data-modal-toggle="delete-item"
          data-item-id="<%= item.id %>"
          data-item-name="<%= item.name %>"
          data-item-type="<%= item.type %>"
          class="flex w-full items-center gap-2 py-2 px-4 hover:bg-gray-600">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
        <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
        </svg>
        Delete
    </button>
</div>