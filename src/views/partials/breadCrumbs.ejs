<div>
    <ol class="inline-flex items-center space-x-1 md:space-x-2">
      
      <li class="inline-flex items-center">
        <a href="/my-drive" class="inline-flex items-center text-sm font-medium text-gray-400 hover:text-white">
          <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
          </svg>
          Home
        </a>
      </li>
      
      <% if (breadcrumbz.length > 1 && breadcrumbz.length <= 3) { %>
        <!-- Render all folders if three or less folders -->
        <% for (let i = 1; i < breadcrumbz.length; i++) { %>
          <li>
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <a href="/my-drive/<%= breadcrumbz[i].id %>" class="ms-1 text-sm font-medium md:ms-2 text-gray-400 hover:text-white"><%= breadcrumbz[i].name %></a>
            </div>
          </li>
        <% } %>
        <!-- Render "..." and only last two folders if more then three folders -->
      <% } else if (breadcrumbz.length > 3) { %>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <div class="ms-1 text-sm font-medium md:ms-2 text-gray-400">...</div>
          </div>
        </li>
        <% for (let i = breadcrumbz.length - 2; i <= breadcrumbz.length -1; i++) { %>
            <li>
              <div class="flex items-center">
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <a href="/my-drive/<%= breadcrumbz[i].id %>" class="ms-1 text-sm font-medium md:ms-2 text-gray-400 hover:text-white"><%= breadcrumbz[i].name %></a>
              </div>
            </li>
          <% } %>
      <% } %>
    </ol>
</div>