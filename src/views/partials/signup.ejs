<section class="bg-gray-900 lg:flex flex-grow justify-around">
    <div class="flex flex-col flex-1 px-6 py-8">
        <div class="flex flex-1 flex-col items-center justify-center px-3 py-8 lg:py-0">
            <h1 class="mb-9 text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
                Create an account
            </h1>
            <form class="space-y-6 md:space-y-8" action="/signup" method="post">
                <div class="flex justify-between gap-4">
                    <div class="w-full relative">
                        <label for="firstname" class="block mb-2 text-sm font-medium text-white">First Name</label>
                        <input type="text" name="firstname" id="firstname" class="border border-gray-600 text-sm rounded-lg block w-full p-2.5 bg-gray-700  placeholder-gray-400 text-white" placeholder="Max" value="<%= formData ? formData.firstname : '' %>">
                        <% if (errors && errors.firstname && errors.firstname.msg) { %>
                            <p class="text-red-500 text-xs italic mt-1 absolute"><%= errors.firstname.msg %></p>
                        <% } %>
                    </div>
                    <div class="w-full relative">
                        <label for="lastname" class="block mb-2 text-sm font-medium text-white">Last Name</label>
                        <input type="text" name="lastname" id="lastname" class="border border-gray-600 text-sm rounded-lg block w-full p-2.5 bg-gray-700  placeholder-gray-400 text-white" placeholder="Mustermann" value="<%= formData ? formData.lastname : '' %>">
                        <% if (errors && errors.lastname && errors.lastname.msg) { %>
                            <p class="text-red-500 text-xs italic mt-1 absolute"><%= errors.lastname.msg %></p>
                        <% } %>
                    </div>
                </div>
                <div class="relative">
                    <label for="username" class="block mb-2 text-sm font-medium text-white">Username</label>
                    <input type="text" name="username" id="username" class="border border-gray-600 text-sm rounded-lg block w-full p-2.5 bg-gray-700  placeholder-gray-400 text-white" placeholder="member_max" value="<%= formData ? formData.username : '' %>">
                    <% if (errors && errors.username && errors.username.msg) { %>
                        <p class="text-red-500 text-xs italic mt-1 mb-4 absolute"><%= errors.username.msg %></p>
                    <% } %>
                </div>
                <div class="relative">
                    <label for="password" class="block mb-2 text-sm font-medium text-white">Password</label>
                    <input type="password" name="password" id="password" placeholder="••••••••" class="border border-gray-600 text-sm rounded-lg block w-full p-2.5 bg-gray-700  placeholder-gray-400 text-white" value="<%= formData ? formData.password : '' %>">
                    <% if (errors && errors.password && errors.password.msg) { %>
                        <p class="text-red-500 text-xs italic mt-1 absolute"><%= errors.password.msg %></p>
                    <% } %>
                </div>
                <div class="relative">
                    <label for="confirm_password" class="block mb-2 text-sm font-medium text-white">Confirm password</label>
                    <input type="password" name="confirm_password" id="confirm_password" placeholder="••••••••" class="border border-gray-600 text-sm rounded-lg block w-full p-2.5 bg-gray-700  placeholder-gray-400 text-white" value="<%= formData ? formData.confirm_password : '' %>">
                    <% if (errors && errors.confirm_password && errors.confirm_password.msg) { %>
                        <p class="text-red-500 text-xs italic mt-1 absolute"><%= errors.confirm_password.msg %></p>
                    <% } %>
                </div>
                <button type="submit" class="w-full font-medium rounded-lg text-sm text-white px-5 py-2.5 text-center bg-gray-600 hover:bg-gray-700">Signup</button>
                <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                    Already have an account? <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login here</a>
                </p>
            </form>
        </div>
    </div>
</section>