<section class="bg-gray-900 flex-grow flex flex-col flex-1 px-6 py-28">
    <div class="flex flex-1 flex-col items-center justify-top">
        <h1 class=" mb-9 text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
            Welcome Back
        </h1>
        <form class="w-full space-y-4 sm:w-3/5 md:w-2/5 md:space-y-6 lg:w-4/12" action="/login" method="post">
            <div>
                <label for="username" class="block mb-2 text-sm font-medium text-white">Username</label>
                <input type="text" name="username" id="username" class="border text-white text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400" placeholder="username">
            </div>
            <div>
                <label for="password-login" class="block mb-2 text-sm font-medium text-white">Password</label>
                <input type="password" name="password" id="password-login" placeholder="••••••••" class=" border text-white text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400">
                <% if (error) { %>
                    <p class="text-red-500 text-xs italic mt-1 absolute"><%= error %></p>
                <% } %>
            </div>
            <p></p>
            <button type="submit" class="w-full font-medium rounded-lg text-sm text-white px-5 py-2.5 text-center bg-gray-600 hover:bg-gray-700">Login</button>
            <p class="text-sm font-light text-gray-500 ">
                Have no account? <a href="/signup" class="font-medium text-gray-500 hover:underline text-primary-500">Signup here</a>
            </p>
        </form>
    </div>
</section>